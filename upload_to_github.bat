@echo off
chcp 65001 >nul
echo ================================================
echo 上傳更改到 GitHub
echo ================================================
echo.

echo 1. 添加所有更改...
git add -A
if %errorlevel% neq 0 (
    echo 錯誤：添加文件失敗
    pause
    exit /b 1
)

echo.
echo 2. 檢查狀態...
git status --short

echo.
echo 3. 提交更改...
git commit -m "更新所有 footer 為包含聖經經文的格式 (Jeremiah 10:12)"
if %errorlevel% neq 0 (
    echo 錯誤：提交失敗
    pause
    exit /b 1
)

echo.
echo 4. 推送到 GitHub...
git push origin main
if %errorlevel% neq 0 (
    echo 錯誤：推送失敗
    pause
    exit /b 1
)

echo.
echo ================================================
echo 完成！所有更改已上傳到 GitHub
echo ================================================
pause

